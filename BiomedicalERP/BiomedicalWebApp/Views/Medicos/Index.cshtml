@model IEnumerable<BiomedicalWebApp.Models.Medico>

@{
    ViewData["Title"] = "Medicos disponibles";
}

<h1>Medicos disponibles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMedico">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMedico">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMedico">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
