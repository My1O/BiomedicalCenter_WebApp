@model BiomedicalWebApp.Models.TurnoPaciente

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>
@if (ViewBag.AllowDelete)
{
    <h3>¿Estás seguro que quieres elimnar?</h3>
}
else
{
    <h3 class="text-danger">No se puede eliminar. El paciente tiene datos relacionados</h3>
}
<div>
    <h4>Turno Paciente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdMedicoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMedicoNavigation.IdMedico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdPacienteNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPacienteNavigation.IdPaciente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdTurnoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTurnoNavigation.IdTurno)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTurno" />
        <input type="hidden" asp-for="IdPaciente" />
        <input type="hidden" asp-for="IdMedico" />
        @if (ViewBag.AllowDelete)
        {
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        } |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
