@model BiomedicalWebApp.Models.TurnoPaciente

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Crear turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdTurno" class="control-label"></label>
                <select asp-for="IdTurno" class ="form-control" asp-items="ViewBag.IdTurno"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label"></label>
                <select asp-for="IdPaciente" class ="form-control" asp-items="ViewBag.IdPaciente"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdMedico" class="control-label"></label>
                <select asp-for="IdMedico" class ="form-control" asp-items="ViewBag.IdMedico"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
