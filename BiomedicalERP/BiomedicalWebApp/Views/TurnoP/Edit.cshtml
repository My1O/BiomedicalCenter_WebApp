@model BiomedicalWebApp.Models.TurnoPaciente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Turno Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTurno" />
            <input type="hidden" asp-for="IdPaciente" />
            <input type="hidden" asp-for="IdMedico" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
