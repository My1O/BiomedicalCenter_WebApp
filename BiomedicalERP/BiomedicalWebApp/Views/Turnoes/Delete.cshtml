@model BiomedicalWebApp.Models.Turno

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>
@if (ViewBag.AllowDelete)
{
    <h3>¿Estás seguro que quieres elimnar?</h3>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h3 class="text-danger">No se puede eliminar. La consulta tiene datos relacionados</h3>
    </div>  
}
<div>
    <h4>Turno</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaTurno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaTurno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Observacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoNavigation.IdEstado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTurno" />
        @if (ViewBag.AllowDelete)
        {
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        } 
        |<a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
